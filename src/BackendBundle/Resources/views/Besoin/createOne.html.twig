{% extends 'AgentGestionnaire.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col ">
                <div class="progressbar-wrapper">
                    <ul class="progressbar">
                        <li class="active">Step 1</li>
                        <li>Step 2</li>
                    </ul>
                </div>

            </div>



        </div>
        <div>
           <form action="{{ path('add_besoin') }}" method="post">



            <div class="form-group field-entrepots">

                <select name="entrepot" id="entrepot" class="form-control">
                    {% for entrepot in entrepots %}
                        <option value="{{ entrepot.id }}">{{ entrepot.address }}</option>
                    {% endfor %}
                </select>


            </div>



            <div class="form-group">

                        <input id="echeance" name="echeance" class="form-control "  />
                        <br>
                        <script>
                            $('#echeance').datepicker({
                                uiLibrary: 'bootstrap'
                            });
                        </script>




            </div>
            <div class="form-group field-entrepots">

                        <button type="submit" class="btn btn-primary btn-block">Save</button>


            </div>


        </form>
            </div>
        </div>

    </div>


    <!-- Horizontal Steppers -->



{% endblock %}