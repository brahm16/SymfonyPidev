{% extends 'AgentGestionnaire.html.twig' %}
{% block body %}
    <h3>List des besoins</h3>
    <table class="table table-hover table-bordered" id="dataTables-example">
        <th>Reference</th>
        <th>Echeance</th>
        <th>Entrepot</th>
        <th>Details</th>
        <th>Supprimer</th>
        <th>Edit</th>
        <th>PDF</th>

        {% for b in besoins %}
            <tr>
                <td>{{ b.reference }}</td>
                <td>{{ b.echeance|date }}</td>
                <td>{{ b.entrepot.address }}</td>
                <td><a href="{{ path('read_besoin',{'id':b.id}) }}">details</a></td>
                <td><a href="{{ path('delete_besoin',{'id':b.id}) }}">delete</a></td>
                <td><a href="{{ path('edit_besoin',{'id':b.id}) }}">edit</a></td>
                <td><a href="{{ path('pdf_generate',{'id':b.id}) }}">pdf</a></td>
            </tr>
        {% endfor %}
    </table>
    <br>
    <a href="{{ path('backend_besoin_createOne') }}">Ajouter votre besoin</a>

{% endblock %}